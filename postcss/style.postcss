body{
  background: #000;
}

@keyframes fade {
  0% { opacity: 0 }
  100% { opacity: 1 }
}

@keyframes fadeslideDown{
  0% {
        opacity: 0;
        transform: translateY(-15px);
    } 
   100% {
        opacity: 1;
        transform: translateY(0);
   }
}

@keyframes fadeslideUp{
  0% {
        opacity: 0;
        transform: translateY(10%);
  }
  100% {
        opacity: 1;
        transform: translateY(0);
  }
}

.navbar {
  font-family: "Righteous";
  -webkit-transition: all 0.6s ease-out;
  -moz-transition: all 0.6s ease-out;
  -o-transition: all 0.6s ease-out;
  -ms-transition: all 0.6s ease-out;
  transition: all 0.6s ease-out;
  background: rgb(0, 0, 0);
  background: rgba(0, 0, 0, 0.30);
  border: none;
  font-size: 1.3em;
  padding: 4vh;
  color:white;
}

.navbar.scrolled {
    padding: 0;
    font-size: 1em;
    background: rgb(0, 0, 0);
}

.navbar-right{
  transform:translateX(-10px);
}

.switchbuttons{
  background-color:#000;
  background-color:rgba(0, 0, 0, 0.2);
  border:none;
  color:white;
  padding:10px;
  font-size:1.3em;
  
}

.switchbuttons.enabled{
  background-color:#FFF;
  color:black;
}

.animation-element.in-view.quote-text {
  opacity: 1;
  animation: fade 1.2s ease-in;
}

.animation-element.in-view.social{
  opacity: 1;
  animation: fadeslideDown 1s ease-in;
}

.animation-element.in-view.portfolio-item{
  opacity: 1;
  animation: fadeslideUp 1s ease-in;
}

.intro-header {
  height:auto;
  min-height:100vh;
  text-align: center;
  overflow-y:hidden;
  background:url(https://s19.postimg.org/6q69siv3n/northern_lights.jpg) fixed;
  background-size: cover;
  padding-top:25vh;
  padding-bottom:35vh;
}

.img-responsive{
  width:100%;
  border:none;
}

.about-section {
  height:auto;
  min-height:100vh;
  padding:5%;
  text-align: center;
  background: #CCC;
}

.portfolio-section {
  height: auto;
  min-height:100vh;
  padding: 5%;
  background:#033;
  background: url(http://s19.postimg.org/jexckkqnn/milky_way_1031138_1280.jpg) fixed no-repeat;
  background-size:cover;
  text-align: center;
}

#img_highQuality {
    display: none;
}

.contact-section {
  height: auto;
  padding: 5%;
  text-align: center;
  background: #000;
}

img[src='None']{
    display: none;
}

.header-text {
  font-family: 'Righteous';
  font-size: 4em;
  color: #FFF;
}

.btn-text{
  background-color: black;
  color: white;
  font-size: 20px;
}

.btn-text i{
  color: #0F0;
}

.btn-text:hover{
  color: black;
}

.btn-text:hover i{
  color: black;
}

.quote-text {
  color: white;
}

.text-desc {
  font-family: "Raleway",Serif;
  padding: 10px;
  text-align: left;
  font-size: 1.7em;
  color: #000;
}

.head{
  color: #000;
  font-weight: bold;
  font-family: "Righteous", Monospace;
  font-size: 1em;
}

.desc-head {
  color: #000;
  font-weight: bold;
  font-family: "Righteous", Monospace;
  font-size: 3em;
}

.portfolio-header {
  font-weight: bold;
  text-shadow: 4px 4px 9px #000000;
  font-family: Monospace;
  font-size: 4em;
  margin-bottom:6%;
  color: #FFF;
}

.portfolio-caption{
  background:#FFF;
  padding:3px;
  z-index:45;
}

.portfolio-item {
  border-color:#FFF;
  margin:4%;
  border: 1px outset rgba(255, 255, 255, 0.6); 
  transition: box-shadow 0.3s;
}

.portfolio-item:hover{
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.6), 0 6px 20px 0 rgba(0, 0, 0, 0.6);
}

.email-container {
  color:white;
  font-family:Monospace;
  font-size:1.7em;
  text-align:left;
  margin-bottom:3%;
}

.social-container{
  margin-top:20%;
  margin-left:10%;
  list-style-type: none;
}

.footer{
  background-color: #222;
  background-color: rgba(13, 13, 13, 0.9);
  padding-top:3%;
  padding-left:3%;
}

a:hover{
  text-decoration: none
}


@media only screen and (max-width: 760px) {
    .social-container{
        margin-top:10%;
        margin-bottom:2%;
        margin-left:0;
    }
  
    .contact-section {
      min-height:auto;
      text-align: left;
      background: #000 fixed;
    }
}